<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="MVP Fragment"
    minApi="7"
    minBuildApi="14"
    description="Create a fragment page base on th MVP">

    <category value="Activity" />
    <formfactor value="Mobile" />

	<parameter
        id="mvpName"
        name="MVP Name"
        type="string"
        constraints="class|nonempty"
        default=""
        help="The name of mvp" />

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />

    <parameter
        id="isLayouts"
        name="layout is subcontract"
        type="boolean"
        default="false"
        help="if true, layout will subcontract" />

    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_mvp.jpg</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>